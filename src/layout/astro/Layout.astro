---
import '../../styles/index.scss';
import Header from '../solid/header';
import Footer from './footer/Footer.astro';
import Main from './main/Main.astro';

type Props = {
  title: string;
};

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="description" content="designo project app" />
    <title>{`Designo - ${title}`}</title>
  </head>
  <body>
    <Header client:load />
    <Main>
      <slot />
    </Main>
    <Footer />
    <div id="portal"></div>
  </body>
</html>
